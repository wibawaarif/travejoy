    <div class="card shadow mb-4 mt-2">
       <div class="card-body">
        <div class="row">
            <div class="col">
                <form action="/admin/bank" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
