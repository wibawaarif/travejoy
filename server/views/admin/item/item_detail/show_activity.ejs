<div class="tab-pane fade" id="show-activity" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-2">
       <div class="card-body">
        <div class="row">
            <div class="col">
                <form action="/admin/item/add/activity" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" name="name" id="name" placeholder="Enter name..." required>
                          </div>
                            <div class="mb-3">
                              <label for="type" class="form-label">Type</label>
                              <input type="text" class="form-control" name="type" id="type" placeholder="Enter type..." required>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Image</label>
                                <input type="file" class="form-control" name="image" id="image" required>
                              </div>
                              <input type="hidden" value="<%= itemId %>" name="itemId">
                      <button type="submit" class="btn btn-primary">Save</button>
                      </form>
            </div>
            <div class="col">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Image URL</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i < activity.length; i++) {%>  
                                <tr>
                                    <td>
                                        <%= i + 1 %>
                                    </td>
                                    <td>
                                        <%= activity[i].name%>
                                    </td>
                                    <td>
                                        <%= activity[i].type %>
                                    </td>
                                    <td>
                                        <img src="http://localhost:3000/<%= activity[i].imageUrl %>" alt="imageUrl" width="70px">
                                    </td>
                                    <td>
                                        <form action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE" method="POST">
                                        <a href="javascript:void()" type="button" class="btn btn-warning btn-circle btn-sm button-edit" data-id="<%= activity[i].id%>" data-name="<%= activity[i].name%>" data-type="<%= activity[i].type %>"><i class="fas fa-edit"></i></a>
                                        <button type="submit" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                                    </form>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

       </div>
   </div>

   </div>