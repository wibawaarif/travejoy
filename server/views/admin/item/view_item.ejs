<%- include('../../partials/header.ejs') %>

    <!-- Page Wrapper -->
    <div id="wrapper">
      <%- include('../../partials/sidebar.ejs') %>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

               <%- include('../../partials/navbar.ejs') %>

                <!-- Begin Page Content -->
                <div class="container-fluid">
                  <%- include('../../partials/messages.ejs') %>

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Item</h1>

                    <!-- End Heading-->

                    <% if(action == 'view') {%>
                      <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                          <button type="button" href="#show-item" class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#show-item"  role="tab" aria-controls="show-item" aria-selected="true">Show Item</button>
                        </li>
                        <li class="nav-item" role="presentation">
                          <button type="button" href="#add-item" class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#add-item"  role="tab" aria-controls="add-item" aria-selected="false">Add Item</button>
                        </li>
                      </ul>
                      <div class="tab-content" id="myTabContent">
                        <%- include('show_table_item.ejs') %>
                        <%- include('add_item.ejs') %>
                      </div>

                    <%} else if(action == 'show image') {%>
                      <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                          <button type="button" href="#show-image" class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#show-image"  role="tab" aria-controls="show-image" aria-selected="true">Show Image</button>
                        </li>
                      </ul>
                      <div class="tab-content" id="myTabContent">
                        <%- include('show_image_item.ejs') %>
                      </div>
                    <% } %>
                      

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <%- include('../../partials/footer.ejs') %>

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <%- include('../../partials/logout.ejs') %>
    <%- include('../../partials/js.ejs') %>
    <script>
        CKEDITOR.replace( 'about' );
</script>